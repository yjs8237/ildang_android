<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- default -->
    <item android:state_focused="false" android:state_pressed="false">
        <shape>
            <solid android:color="@color/colorAppRep" />
            <corners android:radius="5dp" />

            <padding android:bottom="5dp" android:left="5dp"
                android:right="5dp" android:top="5dp" />

        </shape>
    </item>

    <!-- click -->
    <item android:state_focused="false" android:state_pressed="true">
        <shape>
            <solid android:color="#FFB600" />
            <corners android:radius="30dp" />

          <padding android:bottom="5dp" android:left="5dp"
              android:right="5dp" android:top="5dp" />

      </shape>
  </item>

  <item>
      <layer-list>
          <!-- shadow (밑으로) : 그림자 -->
            <item android:top="3dp">
                <shape>
                    <corners android:radius="3dp" />
                    <solid android:color="#1f000000" />
                </shape>
            </item>
            <!-- background (위로) -->
            <item android:bottom="3dp">
                <shape>
                    <corners android:radius="3dp" />
                    <solid android:color="#00854a" />
                    <stroke android:width="1dp" android:color="#6a6a6a" />
                </shape>
            </item>
        </layer-list>
    </item>




</selector>
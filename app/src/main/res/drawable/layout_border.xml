<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle" >
            <stroke
                android:width="1dp"
                android:color="@color/colorAppRep" />
            <solid android:color="#FFF" />

            <padding android:bottom="10dp" android:left="5dp"
                android:right="5dp" android:top="10dp" />

        </shape>
    </item>

</layer-list>

